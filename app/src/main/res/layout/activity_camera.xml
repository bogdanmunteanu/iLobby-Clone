<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CameraActivity">


    <com.camerakit.CameraKitView android:layout_width="match_parent"
                                 android:id="@+id/cameraKitView"
                                 app:camera_facing="front"
                                 android:layout_height="match_parent"/>
    <ImageButton android:layout_width="80dp"
                 android:scaleType="centerCrop"
                 android:src="@drawable/camera"
                 android:layout_height="80dp"
                 android:background="@android:color/transparent"
                 app:layout_constraintStart_toEndOf="@+id/cameraKitView" app:layout_constraintHorizontal_bias="0.501"
                 app:layout_constraintEnd_toStartOf="@+id/cameraKitView"
                 android:layout_marginBottom="88dp"
                 app:layout_constraintBottom_toBottomOf="@+id/cameraKitView"
                 android:id="@+id/imageButton"/>

</android.support.constraint.ConstraintLayout>